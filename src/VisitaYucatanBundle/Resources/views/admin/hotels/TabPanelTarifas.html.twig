<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            <select class="form-control" data-ng-model="ctrlHotel.tarifaHabitacionTO.idContrato" id="selectContratoTarifa">
                <option value="">SELECCIONA CONTRATO</option>
                <option value="[[ contrato.id ]]" ng-repeat="contrato in ctrlHotel.listaContratos.data">[[ contrato.descripcion ]]</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-control" data-ng-model="ctrlHotel.tarifaHabitacionTO.data.idHabitacion" id="selectHabitacionesTarifa">
                <option value="">SELECCIONA HABITACION</option>
                <option value="[[ habitacion.id ]]" ng-repeat="habitacion in ctrlHotel.listaHabitacionesHotel.data">[[ habitacion.nombre ]]</option>
            </select>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-12">

        <div class="col-sm-6">
            <div class="col-sm-12">
                <h5 class="page-header text-bold text-uppercase" style="margin-top: -13px;padding: 10px;">
                    Busqueda de tarifas
                </h5>
            </div>
            <div class="col-sm-12 form-horizontal row-border">

                <div class="form-group">
                    <label class="col-sm-4 control-label">Fecha</label>
                    <div class="col-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control daterangepickerdate" readonly id="datePickerTarifas"/>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Sencilla</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Doble</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Triple</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Cuadruple</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-8 text-right">
                        <input type="button" data-ng-click="ctrlHotel.findListRateHotel()" value="buscar" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6"></div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead class="text-uppercase">
                <tr>
                    <th>#</th>
                    <th>fecha</th>
                    <th>sencilla</th>
                    <th>doble</th>
                    <th>triple</th>
                    <th>cuadruple</th>
                </tr>
            </thead>
            <tbody>
                <tr data-ng-repeat="tarifa in ctrlHotel.listaTarifasHotel.data">
                    <td>[[ $index + 1 ]]</td>
                    <td>[[ tarifa.fecha ]]</td>
                    <td>[[ tarifa.sencilla ]]</td>
                    <td>[[ tafifa.doble ]]</td>
                    <td>[[ tarifa.triple ]]</td>
                    <td>[[ tarifa.cuadruple ]]</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>