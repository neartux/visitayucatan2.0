<div class="modal fade in" id="modalUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="false">
    <div class="modal-backdrop fade in" style="height: 1037px;"></div>
    <div class="modal-dialog" style="width: 800px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span
                            class="fa fa-times"></span></button>
                <h2 class="modal-title">[[ ctrlUser.titleModal ]]</h2>
            </div>
            <form action="" class="form-horizontal" name="formUser" novalidate>
                <input type="hidden" ng-model="ctrlUser.user.id"/>

                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6">

                                <div class="form-group"
                                     ng-class="{ 'has-error' : formUser.username.$invalid && !formUser.username.$pristine }">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.username{% endtrans %}
                                        <span class="required">*</span>
                                    </label>

                                    <div class="col-sm-8">
                                        <input type="text" id="username" ng-model="ctrlUser.user.username"
                                               name="username" class="form-control" required/>
                                        <span ng-show="formUser.username.$invalid && !formUser.username.$pristine"
                                              class="help-block">
                                            {% trans %}catalog.user.report.message.error.username{% endtrans %}
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group"
                                     ng-class="{ 'has-error' : formUser.password.$invalid && !formUser.password.$pristine && ctrlUser.isNewUser }">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.password{% endtrans %}
                                        <span class="required" ng-show="ctrlUser.isNewUser">*</span>
                                    </label>

                                    <div class="col-sm-8">
                                        <input type="password" id="password" ng-model="ctrlUser.user.password"
                                               name="password" class="form-control" ng-required="ctrlUser.isNewUser" ng-minlength="4"/>
                                        <span ng-show="formUser.password.$error.required && ctrlUser.isNewUser"
                                              class="help-block">
                                            {% trans %}catalog.user.report.message.error.password{% endtrans %}
                                        </span>
                                        <span ng-show="formUser.password.$error.minlength && ctrlUser.isNewUser"
                                              class="help-block">
                                            Captura MÃ­nimo 4 Caracteres
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group"
                                     ng-class="{ 'has-error' : formUser.nombres.$invalid && !formUser.nombres.$pristine }">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.names{% endtrans %}
                                        <span class="required">*</span>
                                    </label>

                                    <div class="col-sm-8">
                                        <input type="text" id="nombres" ng-model="ctrlUser.user.nombres"
                                               name="nombres" class="form-control" required/>
                                        <span ng-show="formUser.nombres.$invalid && !formUser.nombres.$pristine"
                                              class="help-block">
                                            {% trans %}catalog.user.report.message.error.names{% endtrans %}
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group"
                                     ng-class="{ 'has-error' : formUser.apellidos.$invalid && !formUser.apellidos.$pristine }">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.last.names{% endtrans %}
                                        <span class="required">*</span>
                                    </label>

                                    <div class="col-sm-8">
                                        <input type="text" id="apellidos" ng-model="ctrlUser.user.apellidos"
                                               name="apellidos" class="form-control" required/>
                                        <span ng-show="formUser.apellidos.$invalid && !formUser.apellidos.$pristine"
                                              class="help-block">
                                            {% trans %}catalog.user.report.message.error.last.names{% endtrans %}
                                        </span>
                                    </div>
                                </div>

                            </div>

                            <div class="col-md-6">

                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.address{% endtrans %}
                                    </label>

                                    <div class="col-sm-8">
                                        <textarea name="direccion" ng-model="ctrlUser.user.direccion"  class="form-control" id="direccion" cols="30" rows="2"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.phone{% endtrans %}
                                    </label>

                                    <div class="col-sm-8">
                                        <input type="text" id="telefono" ng-model="ctrlUser.user.telefono"
                                               name="telefono" class="form-control"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.movil{% endtrans %}
                                    </label>

                                    <div class="col-sm-8">
                                        <input type="text" id="celular" ng-model="ctrlUser.user.celular"
                                               name="celular" class="form-control"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        {% trans %}catalog.user.report.label.email{% endtrans %}
                                    </label>

                                    <div class="col-sm-8">
                                        <input type="text" id="email" ng-model="ctrlUser.user.email"
                                               name="email" class="form-control"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="fa fa-times-circle-o"></span> &nbsp;
                        {% trans %}button.label.close{% endtrans %}
                    </button>
                    <button data-ng-show="ctrlUser.isNewUser" type="button" class="btn btn-primary"
                            data-ng-click="ctrlUser.saveformUser(formUser.$valid)"
                            ng-disabled="formUser.$invalid">
                        <span class="fa fa-save"></span> &nbsp;
                        {% trans %}button.label.save{% endtrans %}
                    </button>
                    <button data-ng-show="!ctrlUser.isNewUser" type="button" class="btn btn-primary"
                            data-ng-click="ctrlUser.updateUser(formUser.$valid)"
                            ng-disabled="formUser.$invalid">
                        <span class="fa fa-save"></span> &nbsp;
                        Guardar
                    </button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>