<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
             <label class="col-sm-4 text-bold control-label" style="margin-bottom: 0; padding-left:0 !important;" >Contrato:</label>
            <select class="form-control" ng-change="ctrlHotel.changeContractRate()" data-ng-model="ctrlHotel.tarifaHabitacionTO.idContrato" id="selectContratoTarifa">
                <option value="">SELECCIONA CONTRATO</option>
                <option value="[[ contrato.id ]]" ng-repeat="contrato in ctrlHotel.listaContratos.data">[[ contrato.descripcion ]]</option>
            </select>
        </div>

        <div class="col-md-3" data-ng-show="ctrlHotel.showSelectRoomRate">
            <label class="col-sm-4 text-bold control-label" style="margin-bottom: 0; padding-left:0 !important;" >Habitaci√≥n:</label>
            <select class="form-control" ng-change="ctrlHotel.changeRoomRate()" data-ng-model="ctrlHotel.tarifaHabitacionTO.idHabitacion" id="selectHabitacionesTarifa">
                <option value="">SELECCIONA HABITACION</option>
                <option value="[[ habitacion.id ]]" ng-repeat="habitacion in ctrlHotel.listaHabitacionesHotel.data">[[ habitacion.nombre ]]</option>
            </select>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-12">

        <div class="col-sm-4" data-ng-show="ctrlHotel.showSearchRate">
            <div class="col-sm-12">
                <h5 class="page-header text-bold text-uppercase" style="margin-top: -13px;padding: 10px;">
                    Busqueda de tarifas
                </h5>
            </div>
            <div class="col-sm-12 form-horizontal row-border">

                <div class="form-group">
                    <label class="col-sm-3 control-label">Fecha</label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control daterangepickerdate" readonly id="datePickerTarifas"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 text-right">
                        <button class="btn btn-success" data-ng-click="ctrlHotel.cleanFormTarifas()"><i class="fa fa-edit"></i>&nbsp;Editar/Crear Tarifas</button>&nbsp;
                        <input type="button" data-ng-click="ctrlHotel.findListRateHotel()" value="buscar" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-8" data-ng-show="ctrlHotel.showEditRate">
            <div class="col-sm-12">
                <h5 class="page-header text-bold text-uppercase" style="margin-top: -13px;padding: 10px;">
                    Modificar tarifas
                </h5>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label only-Integer input-tarifa">Tarifa Sencilla</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" ng-model="ctrlHotel.tarifaHabitacionTO.sencillo" id="tarifaSencillo"/>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">Tarifa Triple</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control only-Integer input-tarifa" ng-model="ctrlHotel.tarifaHabitacionTO.triple"/>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-sm-12 mt-sm">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">Tarifa Doble</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control only-Integer input-tarifa" ng-model="ctrlHotel.tarifaHabitacionTO.doble"/>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">Tarifa Cuadruple</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control only-Integer input-tarifa" ng-model="ctrlHotel.tarifaHabitacionTO.cuadruple"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 text-right">
                            <input type="button" data-ng-click="ctrlHotel.showEditRate = false" value="Cancelar" class="btn btn-default"/>
                            <input type="button" data-ng-click="ctrlHotel.saveHotelTarifaTO()" value="Guardar" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<br><br>
<div class="row" data-ng-show="ctrlHotel.listaTarifasHotel.data.length">
    <div class="col-sm-12">
        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead class="text-uppercase">
                <tr>
                    <th>#</th>
                    <th>fecha</th>
                    <th>sencilla</th>
                    <th>doble</th>
                    <th>triple</th>
                    <th>cuadruple</th>
                </tr>
            </thead>
            <tbody>
                <tr data-ng-repeat="tarifa in ctrlHotel.listaTarifasHotel.data">
                    <td>[[ $index + 1 ]]</td>
                    <td>[[ tarifa.fecha | date : 'dd/MM/yyyy' ]]</td>
                    <td>[[ tarifa.sencillo ]]</td>
                    <td>[[ tarifa.doble ]]</td>
                    <td>[[ tarifa.triple ]]</td>
                    <td>[[ tarifa.cuadruple ]]</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>