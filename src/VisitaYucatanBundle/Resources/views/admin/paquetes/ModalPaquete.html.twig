<div class="modal fade in" id="modalPaquete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-backdrop fade in" style="height: 1037px;"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-times"></span></button>
                <h2 class="modal-title">[[ paquetes.titleModal ]]</h2>
            </div>
            <form action="" class="form-horizontal row-border" name="formPaquete" novalidate>
                <input type="hidden" ng-model="paquetes.currency.id"/>
                <div class="modal-body">
                    <div class="form-group" ng-class="{ 'has-error' : formPaquete.descripcion.$invalid && !formPaquete.descripcion.$pristine }">
                        <label class="col-sm-2 control-label text-bold text-uppercase">
                            Descripci√≥n
                        </label>
                        <div class="col-sm-8">
                            <input type="text" id="description" ng-model="paquetes.newPaquete.descripcion" name="descripcion" class="form-control" required/>
                                <span ng-show="formPaquete.descripcion.$invalid && !formPaquete.descripcion.$pristine" class="help-block">
                                    {% trans %}catalog.currency.report.message.error.description{% endtrans %}
                                </span>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{ 'has-error' : formPaquete.circuito.$invalid && !formPaquete.circuito.$pristine && paquetes.isNewPaquete }">
                        <label class="col-sm-2 control-label text-bold text-uppercase">
                            Circuito
                        </label>

                        <div class="col-sm-8">
                            <textarea name="circuito" ng-model="paquetes.newPaquete.circuito"  class="form-control" id="circuito" cols="30" rows="2" required></textarea>
                            <span ng-show="formPaquete.circuito.$invalid && !formPaquete.circuito.$pristine && paquetes.isNewPaquete" class="help-block">
                                    {% trans %}tour.report.label.circuit.required{% endtrans %}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="fa fa-times-circle-o"></span> &nbsp;
                        {% trans %}button.label.close{% endtrans %}
                    </button>
                    <button data-ng-show="paquetes.isNewPaquete" type="button" class="btn btn-primary" data-ng-click="paquetes.saveFormPaquete(formPaquete.$valid)" ng-disabled="formPaquete.$invalid">
                        <span class="fa fa-save"></span> &nbsp;
                        {% trans %}button.label.save{% endtrans %}
                    </button>
                    <button data-ng-show="!paquetes.isNewPaquete" type="button" class="btn btn-primary" data-ng-click="paquetes.updatePaquete(formPaquete.$valid)" ng-disabled="formPaquete.$invalid">
                        <span class="fa fa-save"></span> &nbsp;
                        {% trans %}button.label.edit{% endtrans %}
                    </button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>