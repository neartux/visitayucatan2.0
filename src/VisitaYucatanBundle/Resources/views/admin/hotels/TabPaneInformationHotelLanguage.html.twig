<form class="form-horizontal" name="formHotelLanguage" novalidate>

    <div class="form-group"
         ng-class="{ 'has-error' : formHotelLanguage.idiomaHotel.$invalid && !formHotelLanguage.idiomaHotel.$pristine }">
        <label for="idiomaHotel" class="col-sm-2 control-label text-bold text-uppercase">
            Selecciona Idioma
            <span class="required">*</span>
        </label>
        <div class="col-sm-8">
            <select name="idiomaHotel" id="idiomaHotel" class="form-control" data-ng-model="ctrlHotel.hotelIdiomaTo.data.idIdioma" ng-change="ctrlHotel.findHotelByIdAndLanguage()" required>
                <option value="">SELECCIONA</option>
                <option value="[[ idioma.id ]]" ng-repeat="idioma in ctrlHotel.listLanguage.data">[[ idioma.descripcion | uppercase ]]</option>
            </select>
            <span ng-show="formHotelLanguage.idiomaHotel.$invalid && !formHotelLanguage.idiomaHotel.$pristine" class="help-block">
                Seleccione un idioma
            </span>
        </div>
    </div>

    <div class="form-group"
         ng-class="{ 'has-error' : formHotelLanguage.nombreHotel.$invalid && !formHotelLanguage.nombreHotel.$pristine }">
        <label class="col-sm-2 control-label text-bold text-uppercase">
            Nombre
            <span class="required">*</span>
        </label>

        <div class="col-sm-8">
            <input type="text" id="nombreTour" ng-model="ctrlHotel.hotelIdiomaTo.data.nombreHotel" ng-disabled="!ctrlHotel.hotelIdiomaTo.data.idIdioma"
                   name="nombreHotel" class="form-control" required/>
            <span ng-show="formHotelLanguage.nombreTour.$invalid && !formHotelLanguage.nombreHotel.$pristine" class="help-block">
                Nombre hotel requerido
            </span>
        </div>
    </div>

    <div class="form-group"
         ng-class="{ 'has-error' : formHotelLanguage.descripcionHotel.$invalid && !formHotelLanguage.descripcionHotel.$pristine }">
        <label class="col-sm-2 control-label text-bold text-uppercase">
            Descripcion
            <span class="required">*</span>
        </label>

        <div class="col-sm-8">
            <textarea name="descripcionHotel" class="summernote" id="descripcionHotel"  name="descripcionHotel"></textarea>
            <span ng-show="formHotelLanguage.descripcionHotel.$invalid && !formHotelLanguage.descripcionHotel.$pristine"
                  class="help-block">
                Descripcion hotel requerido
            </span>
        </div>
    </div>

    <div class="col-md-12 text-center">
        <button type="button" class="btn btn-primary"
                data-ng-click="ctrlHotel.saveHotelLanguage(formHotelLanguage.$valid)"
                ng-disabled="formHotelLanguage.$invalid">
            <span class="fa fa-save"></span> &nbsp;
            {% trans %}button.label.save{% endtrans %}
        </button>
    </div>

</form>