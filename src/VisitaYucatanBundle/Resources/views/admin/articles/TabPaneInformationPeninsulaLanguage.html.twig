<form action="" class="form-horizontal" name="formPeninsulaLanguage" novalidate>

    <div class="form-group"
         ng-class="{ 'has-error' : formPeninsulaLanguage.idiomaPeninsula.$invalid && !formPeninsulaLanguage.idiomaPeninsula.$pristine }">
        <label for="idiomaPeninsula" class="col-sm-2 control-label text-bold text-uppercase">
            Selecciona Idioma
            <span class="required">*</span>
        </label>
        <div class="col-sm-8">
            <select name="idiomaPeninsula" id="idiomaPeninsula" class="form-control"
                    data-ng-model="ctrlPeninsula.peninsulaIdiomaTo.data.idIdioma"
                    ng-change="ctrlPeninsula.findPeninsulaByIdAndLanguage()" required>
                <option value="">SELECCIONA</option>
                <option value="[[ idioma.id ]]" ng-repeat="idioma in ctrlPeninsula.listLanguage.data">[[
                    idioma.descripcion | uppercase ]]
                </option>
            </select>
        <span ng-show="formPeninsulaLanguage.idiomaPeninsula.$invalid && !formPeninsulaLanguage.idiomaPeninsula.$pristine"
              class="help-block">
            Seleccione un idioma
        </span>
        </div>
    </div>

    <div class="form-group"
         ng-class="{ 'has-error' : formPeninsulaLanguage.nombrePeninsula.$invalid && !formPeninsulaLanguage.nombrePeninsula.$pristine }">
        <label class="col-sm-2 control-label text-bold text-uppercase">
            Nombre
            <span class="required">*</span>
        </label>

        <div class="col-sm-8">
            <input type="text" id="nombrePeninsula" ng-model="ctrlPeninsula.peninsulaIdiomaTo.data.nombre"
                   ng-disabled="!ctrlPeninsula.peninsulaIdiomaTo.data.idIdioma"
                   name="nombrePeninsula" class="form-control" required/>
    <span ng-show="formPeninsulaLanguage.nombrePeninsula.$invalid && !formPeninsulaLanguage.nombrePeninsula.$pristine"
          class="help-block">
        Nombre península requerido
    </span>
        </div>
    </div>


    <div class="form-group"
         ng-class="{ 'has-error' : formPeninsulaLanguage.descripcionPeninsula.$invalid && !formPeninsulaLanguage.descripcionPeninsula.$pristine }">
        <label class="col-sm-2 control-label text-bold text-uppercase">
            Descripcion
            <span class="required">*</span>
        </label>

        <div class="col-sm-8">
    <textarea name="descripcionPeninsula" class="summernote" id="descripcionPeninsula"
              ng-model="ctrlPeninsula.peninsulaIdiomaTo.data.descripcion"
              name="descripcionPeninsula">

</textarea>
<span ng-show="formPeninsulaLanguage.descripcionPeninsula.$invalid && !formPeninsulaLanguage.descripcionPeninsula.$pristine"
      class="help-block">
Descripcion península requerido
</span>
        </div>
    </div>

    <div class="col-md-12 text-center">
        <button type="button" class="btn btn-primary"
                data-ng-click="ctrlPeninsula.savePeninsulaLanguage(formPeninsulaLanguage.$valid)"
                ng-disabled="formPeninsulaLanguage.$invalid">
            <span class="fa fa-save"></span> &nbsp;
            {% trans %}button.label.save{% endtrans %}
        </button>
    </div>

</form>