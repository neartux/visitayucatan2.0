<div class="pie-pagina" data-ng-controller="WebCommonsController as ctrlCommons" data-ng-init="ctrlCommons.initCommons('{{ app.session.get('_locale') }}', '{{ app.session.get('_currency') }}')">
    <div class="wrap-pie">
        <div class="pie-central">

            <div class="renglon1 text-to-uppercase">
                <div class="linea">
                </div>
                <ul class="menu-footer">
                    <li><a href="{{ path('web_home') }}">{% trans %}page.web.menu.label.start{% endtrans %}</a></li>
                    <li><a href="{{ path('web_paquetes') }}">{% trans %}page.web.menu.label.packages{% endtrans %}</a></li>
                    <li><a href="{{ path('web_tours') }}">{% trans %}page.web.menu.label.tours{% endtrans %}</a></li>
                </ul>
            </div>
            <div class="renglon2 text-to-uppercase">
                <ul class="menu-footer">
                    <li><a href="{{ path('web_hoteles_merida') }}">{% trans %}page.web.menu.label.hotels{% endtrans %}</a></li>
                    <li><a href="yucatan-mexico">{% trans %}page.web.menu.label.peninsula{% endtrans %}</a></li>
                    <li><a href="contacto">{% trans %}page.web.menu.label.contact{% endtrans %}</a></li>
                </ul>
            </div>
            <div class="renglon3">
                <div>

                        <input type="hidden" id="pathCatalogsReload" value="{{ path('web_configure_select') }}"/>
                        <h4 class="label-currency">{% trans %}page.web.commons.label.currency{% endtrans %}</h4>
                        <select ng-model="ctrlCommons.objCatalog.currency" class="select-currency" ng-change="ctrlCommons.changeCurrencyOrLanguage()">
                            {% for moneda in monedas %}
                                <option value='{{ moneda.id }}'>{{ moneda.descripcion }}</option>
                            {% endfor %}
                        </select>

                        <h4 class="label-language">{% trans %}page.web.commons.label.language{% endtrans %}</h4>
                        <select ng-model="ctrlCommons.objCatalog.language" class="select-language" ng-change="ctrlCommons.changeCurrencyOrLanguage()">
                            {% for idioma in idiomas %}
                                <option value='{{ idioma.abreviatura }}'>{{ idioma.descripcion }}</option>
                            {% endfor %}
                        </select>
                </div>
            </div>
            <div class="renglon4">
                <div>
                    <img src="{{ asset('bundles/VisitaYucatanBundle/img/web/logo-pie.png') }}">
                </div>
            </div>
            <div class="limpiar"></div>
        </div>
    </div>
</div>