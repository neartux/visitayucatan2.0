<div class="modal fade in" id="modalHotelContacts" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-backdrop fade in" style="height: 1037px;"></div>
    <div class="modal-dialog" style="width: 60%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-times"></span></button>
                <h2 class="modal-title">Contactos</h2>
            </div>
            <form class="form-horizontal row-border" name="formHotelContact" novalidate>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-info" data-ng-click="ctrlHotel.isNewContact = true">
                                Nuevo Contacto
                            </button>
                        </div>
                    </div>

                    <div class="row" data-ng-show="ctrlHotel.isNewContact">
                        <div class="col-md-12">
                            <br>
                            <div class="col-md-6 borders-col-contacts">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        Nombres <span class="required">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input type="text" id="nameContact" ng-model="ctrlHotel.hotelContacto.nombres" class="form-control"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        Apellidos <span class="required">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input type="text" id="lastNameContac" ng-model="ctrlHotel.hotelContacto.apellidos"class="form-control"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 borders-col-contacts">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label text-bold text-uppercase">
                                        Email <span class="required">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input type="text" id="emailContact" ng-model="ctrlHotel.hotelContacto.email" class="form-control"/>
                                    </div>
                                </div>

                                <div class="form-group text-right">
                                    <div class="col-sm-12">
                                        <button type="button" class="btn btn-default" data-ng-click="ctrlHotel.isNewContact = false">
                                            <span class="fa fa-times-circle-o"></span> &nbsp;
                                            Cancelar
                                        </button>
                                        <button type="button" class="btn btn-primary" data-ng-click="ctrlHotel.createContactHotel()">
                                            <span class="fa fa-save"></span> &nbsp;
                                            {% trans %}button.label.save{% endtrans %}
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <br><br>

                    <div class="row">
                        <div class="col-md-12">

                            <div class="panel panel-primary" style="visibility: visible; opacity: 1; display: block; transform: translateY(0px);">
                                <div class="panel-heading"></div>
                                <div class="panel-body no-padding">
                                    <table class="table table-striped table-bordered" width="100%">
                                        <thead class="text-uppercase">
                                        <tr>
                                            <th width="3%">Id</th>
                                            <th>Nombres</th>
                                            <th width="10%">Correo</th>
                                            <th width="15%">&nbsp;</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr class="odd gradeX" data-ng-repeat="contacto in ctrlHotel.contactHotelList.data">
                                            <td>[[ $index + 1 ]]</td>
                                            <td>[[ contacto.nombres ]]&nbsp;[[ contacto.apellidos ]]</td>
                                            <td>[[ contacto.email ]]</td>
                                            <td>
                                                <a class="btn btn-danger-alt" data-ng-click="ctrlHotel.deleteContactHotel(contacto.id)" href="javascript:;"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="fa fa-times-circle-o"></span> &nbsp;
                        Cerrar
                    </button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>