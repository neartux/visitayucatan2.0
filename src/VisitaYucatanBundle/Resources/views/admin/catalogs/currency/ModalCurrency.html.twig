<div class="modal fade in" id="modalCurrency" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-backdrop fade in" style="height: 1037px;"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-times"></span></button>
                <h2 class="modal-title">[[ ctrlCurrency.titleModal ]]</h2>
            </div>
            <form action="" class="form-horizontal row-border" name="formCurrency" novalidate>
                <input type="hidden" ng-model="ctrlCurrency.currency.id"/>
                <div class="modal-body">
                        <div class="form-group" ng-class="{ 'has-error' : formCurrency.descripcion.$invalid && !formCurrency.descripcion.$pristine }">
                            <label class="col-sm-2 control-label text-bold text-uppercase">
                                {%trans%}catalog.currency.report.label.description{% endtrans %}
                            </label>
                            <div class="col-sm-8">
                                <input type="text" id="description" ng-model="ctrlCurrency.currency.descripcion" name="descripcion" class="form-control" required/>
                                <span ng-show="formCurrency.descripcion.$invalid && !formCurrency.descripcion.$pristine" class="help-block">
                                    {% trans %}catalog.currency.report.message.error.description{% endtrans %}
                                </span>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error' : formCurrency.symbolo.$invalid && !formCurrency.symbolo.$pristine }">
                            <label class="col-sm-2 control-label text-bold text-uppercase">
                                {%trans%}catalog.currency.report.label.symbol{% endtrans %}
                            </label>
                            <div class="col-sm-8">
                                <input type="text" id="symbolo" ng-model="ctrlCurrency.currency.simbolo" name="symbolo" class="form-control" ng-maxlength="10" required />
                                <span ng-show=" formCurrency.symbolo.$dirty && formCurrency.symbolo.$invalid &&formCurrency.symbolo.$error.required" class="help-block">
                                    {% trans %}catalog.currency.report.message.error.symbol{% endtrans %}
                                </span>
                                <span ng-show="formCurrency.symbolo.$error.maxlength" class="help-block">
                                    {% trans %}catalog.currency.report.message.error.length.symbol{% endtrans %}
                                </span>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error' : formCurrency.tipoCambio.$invalid && !formCurrency.tipoCambio.$pristine }">
                            <label class="col-sm-2 control-label text-bold text-uppercase">
                                {%trans%}catalog.currency.report.label.change.type{% endtrans %}
                            </label>
                            <div class="col-sm-8">
                                <input type="text" id="tipoCambio" ng-model="ctrlCurrency.currency.tipoCambio" name="tipoCambio" class="form-control" required onkeypress="return numbersOnlyWithDecimals(this, event);"/>
                                <span ng-show="formCurrency.tipoCambio.$invalid && !formCurrency.tipoCambio.$pristine" class="help-block">
                                    {% trans %}catalog.currency.report.message.error.change.type{% endtrans %}
                                </span>
                            </div>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="fa fa-times-circle-o"></span> &nbsp;
                        {% trans %}button.label.close{% endtrans %}
                    </button>
                    <button data-ng-show="ctrlCurrency.isNewCurrency" type="button" class="btn btn-primary" data-ng-click="ctrlCurrency.saveFormCurrency(formCurrency.$valid)" ng-disabled="formCurrency.$invalid">
                        <span class="fa fa-save"></span> &nbsp;
                        {% trans %}button.label.save{% endtrans %}
                    </button>
                    <button data-ng-show="!ctrlCurrency.isNewCurrency" type="button" class="btn btn-primary" data-ng-click="ctrlCurrency.updateCurrency(formCurrency.$valid)" ng-disabled="formCurrency.$invalid">
                        <span class="fa fa-save"></span> &nbsp;
                        {% trans %}button.label.edit{% endtrans %}
                    </button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>