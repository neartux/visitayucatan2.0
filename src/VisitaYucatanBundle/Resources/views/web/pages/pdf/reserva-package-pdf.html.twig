<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reserva</title>
    <style>
        body {
            font-size: 11px;;
        }
        .title {
            color: #00B0C7;
        }

        .datos-generales {
            border: 1px grey solid;
        }

        .datos-personales {
            border: 1px grey solid;
        }

        .label-voucher {
            font-weight: bold;
            font-size: 14px;
        }

        .labe-bold {
            font-weight: bold;
        }
        .detalle-compra{
            border: 1px grey solid;
        }
        .label-aprovado {
            color: #37c759;
        }
        .title-detalle-compra{
            font-weight: bold;
            font-size: 14px;
        }
        .title-detalle-compra{
            font-weight: bold;
            font-size: 14px;
        }
        .gray-shadow {
            background-color: grey;
            font-weight: bold;
            color: #ffffff;
        }
        .text-center{
            text-align: center !important;
        }
        .text-right {
            text-align: right !important;
        }
        .text-left {
            text-align: left !important;
        }
    </style>
</head>
<body>
<div class="row-logo">
    <img src="{{ asset('bundles/VisitaYucatanBundle/img/logos/logo.png') }}" width="150"/>
</div>
<div class="row-normal" style="margin-top: 0;padding-top: 0;">
    {% if ventaCompleta.pagado %}
        <h1 class="title">Muchas Gracias por su compra</h1>
    {% else %}
        <h1 class="title">Lo sentimos, su tarjeta ha sido declinada</h1>
    {% endif %}
</div>

<div class="datos-generales">
    <label class="label-voucher">Voucher Electrónico</label> <br> <br>
    <table class="table-datos-generales" style="width: 70%">
        <tbody>
        <tr>
            <th class="labe-bold">NÚMERO DE VOUCHER</th>
            <th>92823894778</th>
        </tr>
        <tr>
            <th class="labe-bold label-aprovado">APROVADA</th>
            <th>&nbsp;</th>
        </tr>
        <tr>
            <th><span class="labe-bold">AÚT:</span> 297989</th>
            <th><span class="labe-bold">OPER:</span>876</th>
        </tr>
        <tr>
            <th><b>ORDER:</b> VIYUC{{ ventaCompleta.idVenta }}</th>
            <th></th>
        </tr>
        <tr>
            <th>&nbsp;</th>
            <th><span class="labe-bold">IMPORTE</span> $ {{ ventaCompleta.costoTotal | number_format(2) }} MXP</th>
        </tr>
        </tbody>
    </table>
    <br> <br>

    {% set fechaCompra = ventaCompleta.fechaVenta | date('d') ~ ' de ' ~ mes ~ ' de ' ~  ventaCompleta.fechaVenta | date('Y') %}

    <table>
        <tr>
            <th>
                <span class="labe-bold">Fecha:</span> {{ fechaCompra }}
                &nbsp;&nbsp;&nbsp;&nbsp;
                <span class="labe-bold">Hora:</span> {{ ventaCompleta.fechaVenta | date('h:i:s a') }}
            </th>
        </tr>
    </table>


</div>

<div class="detalle-compra">
    <label class="title-detalle-compra">Detalle de su compra</label>
    <br> <br>
    <table width="100%">
        <thead>
        <tr class="gray-shadow">
            <th>Descripción</th>
            <th class="text-center">Fecha reservada</th>
            <th class="text-center">Adultos</th>
            <th class="text-center">Menores</th>
            <th class="text-center">Importe</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td class="text-left">
                Tour: {{ ventaCompleta.nombreTour }}
            </td>
            <td>{{ fechaCompra }}</td>
            <td class="text-center">{{ ventaCompleta.numeroAdultos }}</td>
            <td class="text-center">{{ ventaCompleta.numeroMenores }}</td>
            <td class="text-center">$ {{ ventaCompleta.costoTotal | number_format(2) }} MXP</td>
        </tr>
        <tr>
            <td colspan="3">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="3">
                Circuito: {{ ventaCompleta.circuito }}
            </td>
        </tr>
        <tr>
            <td colspan="3">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="3">
                Hotel para pickup: {{ ventaCompleta.hotelPickup }}
            </td>
        </tr>
        <tr>
            <td colspan="3">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <b>Clave de su reservacion:</b><br> &nbsp;VIYUC{{ ventaCompleta.idVenta }}
            </td>
            <td>
                <b>Total a pagar</b>
            </td>
            <td class="text-center">
                $ {{ ventaCompleta.costoTotal | number_format(2) }} MXP
            </td>
        </tr>
        </tbody>
    </table>
</div>

<div class="datos-personales">
    <label class="title-detalle-compra">Datos Personales</label>
    <br><br>
    <table>
        <thead>
        <tr class="gray-shadow">
            <td>Nombre</td>
            <td>Teléfono</td>
            <td>Email</td>
            <td>Ciduad Origen</td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ ventaCompleta.nombres ~ ' ' ~ ventaCompleta.apellidos }}</td>
            <td>{{ ventaCompleta.lada }}&nbsp;{{ ventaCompleta.telefono }}</td>
            <td>{{ ventaCompleta.email }}</td>
            <td>{{ ventaCompleta.ciudad }}</td>
        </tr>
        </tbody>
    </table>
</div>


</body>
</html>