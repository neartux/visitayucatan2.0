<div class="row">
	<div class="col-md-12">
		<button class="btn btn-primary" data-ng-click="paquetesVM.displayNewPaqueteCombinacion()">
			<span class="fa fa-plus"></span>&nbsp;
			Nuevo Paquete Combinaci√≥n
		</button>
	</div>
</div>
	  <table class="table table-striped table-bordered mt-md" cellspacing="0" width="100%">
	      <thead class="text-uppercase">
	      <tr>
	          <th width="4%">Id</th>
	          <th width="15%">Nombre hotel</th>
	          <th width="10%">Costo sencillo</th>
	          <th width="10%">Costo doble</th>
	          <th width="10%">Costo triple</th>
	          <!--Columna para promover o remover promover, (0) es no promovido, (1) es promovido-->
	          <th width="8%">Panel</th>
	      </tr>
	      </thead>
	      <tbody>
	      <tr class="odd gradeX" data-ng-repeat="p in paquetesVM.listPaquetesCombinacion">
	          <td>[[ p.id ]]</td>
	          <td>[[ p.nomhotel]]</td>
	          <td>[[ p.costoSencillo ]]</td>
	          <td>[[ p.costoDoble ]]</td>
	          <td>[[ p.costoTriple ]]</td>
	          <td>
	              <a class="btn btn-success-alt" data-ng-click="paquetesVM.displayEditPaqueteCombinacion(p)" href="javascript:;" ><i class="fa fa-pencil"></i></a>
	              <a class="btn btn-danger-alt" data-ng-click="paquetesVM.deletePaqueteCombinacion(p.id)" href="javascript:;"><i class="fa fa-trash"></i></a>
	          </td>
	      </tr>
	      </tbody>
	  </table>