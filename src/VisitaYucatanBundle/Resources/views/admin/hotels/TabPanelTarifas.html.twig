<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            <select class="form-control" data-ng-model="ctrlHotel.tarifaHabitacion.idContrato" id="selectContratoTarifa">
                <option value="">SELECCIONA CONTRATO</option>
                <option value="[[ contrato.id ]]" ng-repeat="contrato in ctrlHotel.listaContratos.data">[[ contrato.descripcion ]]</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-control" data-ng-model="ctrlHotel.hotelHabitacionIdiomaTO.data.idHabitacion" ng-change="ctrlHotel.showIdiomaHabitacion()" id="selectHabitacionesTarifa">
                <option value="">SELECCIONA HABITACION</option>
                <option value="[[ habitacion.id ]]" ng-repeat="habitacion in ctrlHotel.listaHabitacionesHotel.data">[[ habitacion.nombre ]]</option>
            </select>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-12">

        <div class="col-sm-6">
            <div class="col-sm-12">
                <h5 class="page-header text-bold text-uppercase" style="margin-top: -13px;padding: 10px;">
                    Busqueda de tarifas
                </h5>
            </div>
            <div class="col-sm-12 form-horizontal row-border">

                <div class="form-group">
                    <label class="col-sm-4 control-label">Fecha</label>
                    <div class="col-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="ti ti-calendar"></i></span>
                            <input type="text" class="form-control daterangepickerdate" readonly id="datePickerTarifas"/>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Sencilla</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Doble</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Triple</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Tarifa Cuadruple</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-8 text-right">
                        <input type="button" value="buscar" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6"></div>
    </div>
</div>