{% extends ':web:TemplateVisitaYucatanDetail.html.twig' %}


{% block section %}

    {% block content %}
        <div class="container-fluid" data-ng-controller="WebPaqueteController as paqWebVM" ng-init="paqWebVM.initPaquete('{{ paquete.combinacionesPaquete | json_encode() }}');">
            <input type="hidden" value="{{ paquete.simboloMoneda }}" id="symbolCurrencyHidden"/>

            <div class="row background-gray-light">
                <div class="col-sm-12">
                    <div class="container-main-header row" style="background-image: url({{ asset('bundles/VisitaYucatanBundle/img/web/banner.jpg') }}) !important;">
                        <div class="col-sm-6 mb-md mt-md">
                            <div class="col-sm-6 z-index-">
                                <a href="{{ asset(paquete.principalImage) }}">
                                    <img src="{{ asset(paquete.principalImage) }}" class="img-thumbnail img-main box-shadow rotate-5-g img-main-detail"/>
                                </a>
                            </div>
                            <div class="col-sm-6 mt-xxl">
                                <h2 class="text-danger text-bold mt-xxl font-family-raleway">{{ paquete.nombrePaquete }}</h2>
                                <div class="box-circuit text-bold text-italic text-center">
                                    <div class="first-part-box">
                                        {% trans %}page.web.label.circuit{% endtrans %}
                                    </div>
                                    <div class="second-part-box">
                                        {{ paquete.circuito }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="seconds-images mt-xl text-right">
                                {% for imagen in paquete.imagesPaquete %}
                                    <a href="localhost{{ asset(imagen.path) }}">
                                        <img src="{{ asset(imagen.path) }}" width="110px" height="80px" class="border-img-detail img-preview-detail-main img-seconds-details"/>
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="row container-body- background-gray-light">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-8 content-body-detail pr-n pl-n">
                            <div class="col-sm-12">
                                <h4 class="text-uppercase text-bold color-text-pink">{% trans %}page.web.label.description{% endtrans %}</h4>
                                <hr style="border-top: 1px solid rgb(239, 182, 78) !important;">
                                {{ paquete.nombrePaquete }} <br>
                                {{ paquete.circuito }}
                            </div>
                            <div class="col-sm-12 color-text-gray-primary mt fnt-sz-12 contenedor-description">
                                <p>{{ paquete.descripcionLarga | raw }}</p>
                                {{paquete.itinerario | raw }}
                            </div>
                            <div class="col-sm-12 background-element-pink mt-lg">
                                <div class="col-sm-6 color-white text-bold text-uppercase text-italic p-sm color-text-white">{% trans %}page.web.labe.reserva.tour.hotel{% endtrans %}:</div>
                                <div class="col-sm-6 color-white text-bold p-sm">
                                    <div class="col-sm-4 text-uppercase text-italic color-text-white">
                                        {% trans %}page.web.labe.reserva.tour.habitacion{% endtrans %}:
                                    </div>
                                    <div class="col-sm-8">
                                        <select name="habitaciones" ng-model="paqWebVM.habitacion" ng-change="paqWebVM.changeHabitacion(paqWebVM.habitacion)" class="form-control">
                                            <option value="sencillo">{% trans %}page.web.labe.reserva.tour.habitacion.single{% endtrans %}</option>
                                            <option value="doble">{% trans %}page.web.labe.reserva.tour.habitacion.double{% endtrans %}</option>
                                            <option value="triple">{% trans %}page.web.labe.reserva.tour.habitacion.triple{% endtrans %}</option>
                                            <option value="cuadruple">{% trans %}page.web.labe.reserva.tour.habitacion.quadruple{% endtrans %}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>



                            <div ng-repeat="h in paqWebVM.habCombinaciones track by $index" data-ng-init="paqWebVM.getRangeStars(h)">
                                <form action="{{ path('web_paquete_reserva') }}" method="post">
                                    <div class="col-sm-12 package-item mr-n ml-n">
                                        <div class="col-sm-8 text-left">
                                            <h4 class="text-bold color-text-pink name-hotel-[[h.id]]">
                                                [[h.nomHotel]]
                                                <span class="fa fa-star" ng-repeat="n in h.totalEstrellas"></span>
                                            </h4>
                                            <div class="well well-sm col-sm-6 mb-n hoverGallery">
                                                <a href="imagenes/hoteles/2P5zfn0o2E_10785218.jpg.1024x0.jpg" class="view-gallery- text-bold text-uppercase">
                                                    {% trans %}page.web.labe.reserva.view.gallery{% endtrans %}<i class="fa fa-play" style="float: right;"></i>
                                                </a>
                                            </div>
                                        </div>

                                        <div class="col-sm-4 p-n">
                                            <div class="col-sm-12 box-price-package text-center m-n area-package-item">
                                                <h4 class="color-text-pink text-bold btnReservaPaquete" id="[[h.id]]">
                                                    $[[h.costo | myCurrency2 ]] [[h.simbolo]]
                                                </h4>
                                                <span class="color-text-pink text-italic" style="font-size: 12px;">
                                                    {% trans %}page.web.labe.reserva.price.per.person{% endtrans %}
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>



                        </div>
                        <div class="col-sm-2"></div>
                    </div>
                </div>
            </div>

        </div>

    {% endblock %}

    {% block scripts %}
        {{ parent() }}
        <script>
            $(function(){
                $('.datepicker').datepicker({
                    autoclose: true,
                    format: 'dd/mm/yyyy',
                    startDate: '+2d'
                });
            });
        </script>

    {% endblock %}


    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}